{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "width": 800,
      "height": 500,
      "projection": {"type": "albersUsa"},
      "layer": [
        {
          "data": {
            "graticule": {
              "extent": [[-125, 25], [-66, 50]],
              "step": [10, 10]
            }
          },
          "mark": {"type": "geoshape", "stroke": "#ccc"}
        },
        {
          "data": {
            "url": "data/states-10m-cut.json",
            "format": {"type": "topojson", "feature": "states"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {"url": "data/trade_counts_per_season.csv"},
          "transform": [
            {
              "lookup": "Team",
              "from": {
                "data": {"url": "data/nba_stadiums.csv"},
                "key": "Team",
                "fields": ["Lat", "Long"]
              }
            },
            {
              "filter": {"param": "season_brush"}
            },
            {
              "aggregate": [
                {"op": "sum", "field": "TradeCount", "as": "TotalTradeCount"},
                {"op": "min", "field": "Season", "as": "StartSeason"},
                {"op": "max", "field": "Season", "as": "EndSeason"}
              ],
              "groupby": ["Team", "Lat", "Long"]
            },
            {
              "calculate": "datum.StartSeason + ' - ' + datum.EndSeason",
              "as": "SeasonRange"
            }
          ],
          "mark": {"type": "circle", "color": "#d95f0e"},
          "encoding": {
            "longitude": {"field": "Long", "type": "quantitative"},
            "latitude": {"field": "Lat", "type": "quantitative"},
            "size": {
              "field": "TotalTradeCount",
              "type": "quantitative",
              "scale": {
                "domain": [0, 100],
                "range": [20, 1000]
              },
              "legend": {"title": "Total Trade count"}
            },
            "tooltip": [
              {"field": "Team", "type": "nominal"},
              {"field": "TotalTradeCount", "type": "quantitative", "title": "Total Trade count"},
              {"field": "SeasonRange", "type": "nominal", "title": "Seasons"}
            ]
          }
        }
      ]
    },
    {
      "width": 800,
      "height": 60,
      "mark": "line",
      "params": [
        {
          "name": "season_brush",
          "select": {"type": "interval", "encodings": ["x"]}
        }
      ],
      "encoding": {
        "x": {"field": "Season", "type": "ordinal", "axis": {"title": "Season", "labelAngle": 0}},
        "y": {"aggregate": "sum", "field": "TradeCount", "type": "quantitative", "axis": {"title": "Total trades"}}
      },
      "data": {"url": "data/trade_counts_per_season.csv"}
    }
  ],
  "config": {
    "view": { "stroke": "transparent" },
    "axis": { "labelFontSize": 12, "titleFontSize": 14 },
    "title": { "fontSize": 18, "anchor": "start" }
  }
}
